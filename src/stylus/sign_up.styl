@import './colors.styl';

body
  display flex
  flex-direction column
  justify-content center
  align-items center

.form
  display grid
  grid-gap 10px 20px
  grid-template-columns repeat(2, 1fr)
  width 788px
  &__input
    border-radius 50px
    color $bg-color
    font-size 20px
    font-family Roboto, sans-serif
    padding: 23px 5px
    background-color $pale-orange
    &::placeholder
      text-transform uppercase
  &__submit
    background-color $orange